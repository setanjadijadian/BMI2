<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bmi2.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cek Berat Badan"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:id="@+id/textView2"
        android:textSize="18sp" />
    <RadioGroup
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:gravity="center_vertical"
        android:layout_below="@+id/textView4">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laki-laki"
            android:id="@+id/rdbLaki"
            android:checked="false" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perempuan"
            android:id="@+id/rdbPerempuan"
            android:checked="false" />
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil Diagnosis"
        android:id="@+id/textView6"
        android:layout_below="@+id/btncek"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hasilideal"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="8sp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hasilket1"
        android:layout_below="@+id/hasilideal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true"
        android:textSize="10sp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edittinggi"
        android:inputType="numberDecimal"
        android:layout_below="@+id/editnama"
        android:layout_alignParentEnd="true"
        android:hint="Masukkan tinggi badan"
        android:textSize="14sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenis Kelamin"
        android:id="@+id/textView4"
        android:layout_below="@+id/editberat"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editnama"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:hint="Masukkan Nama"
        android:layout_alignStart="@+id/edittinggi"
        android:textSize="14sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/btnexit"
        android:layout_above="@+id/textView6"
        android:layout_toEndOf="@+id/textView2" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hasilket2"
        android:textSize="10sp"
        android:layout_below="@+id/hasilket1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editnama"
        android:layout_alignBottom="@+id/editnama"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="8dp"
        android:inputType="text"
        android:text="Nama"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tinggi"
        android:id="@+id/textView3"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/edittinggi"
        android:layout_alignBottom="@+id/edittinggi"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berat Badan"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@+id/edittinggi"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editberat"
        android:hint="Masukkan berat badan"
        android:textSize="14sp"
        android:inputType="numberDecimal"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/btnclear"
        android:layout_below="@+id/radioGroup"
        android:layout_alignStart="@+id/textView6" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cek In"
        android:id="@+id/btncek"
        android:layout_below="@+id/radioGroup"
        android:layout_toStartOf="@+id/textView2" />
</RelativeLayout>